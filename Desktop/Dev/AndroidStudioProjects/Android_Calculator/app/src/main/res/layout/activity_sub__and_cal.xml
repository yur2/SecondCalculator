<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff064"
    tools:context="com.example.yurina.android_calculator.SubActivity_AndCal">


<LinearLayout
    android:id="@+id/onelinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="30dp"
    android:weightSum="4">

    <Button
        android:id="@+id/onebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:shadowRadius="5"
        android:background="@drawable/teduri"
        android:text="1"
        android:textSize="20dp" />

    <!--android:shadowColor="#A8A8A8"-->
    <!--android:shadowDx="0"-->
    <!--android:shadowDy="0"-->


    <Button
        android:id="@+id/twobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2"
        android:background="@drawable/teduri"
        android:textSize="20dp" />

    <Button
        android:id="@+id/threebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="3"
        android:background="@drawable/teduri"
        android:textSize="20dp" />

    <Button
        android:id="@+id/plusbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="+"
        android:background="@drawable/button_selector"
        android:textSize="20dp" />
</LinearLayout>

<LinearLayout
    android:id="@+id/twolinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/onelinear"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="4">

    <Button
        android:id="@+id/fourbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="4"
        android:background="@drawable/teduri"
        android:textSize="20dp" />

    <Button
        android:id="@+id/fivebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="5"
        android:background="@drawable/teduri"
        android:textSize="20dp" />

    <Button
        android:id="@+id/sixbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="6"
        android:background="@drawable/teduri"
        android:textSize="20dp" />

    <Button
        android:id="@+id/minusbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="-"
        android:background="@drawable/button_selector"
        android:textSize="20dp" />


</LinearLayout>


<LinearLayout
    android:id="@+id/threelinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/twolinear"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="4">

    <Button
        android:id="@+id/sevenbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/teduri"
        android:text="7"
        android:textSize="20dp" />

    <Button
        android:id="@+id/eightbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="8"
        android:background="@drawable/teduri"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ninebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="9"
        android:background="@drawable/teduri"
        android:textSize="20dp" />

    <Button
        android:id="@+id/multibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="*"
        android:background="@drawable/button_selector"
        android:textSize="20dp" />


</LinearLayout>


<LinearLayout
    android:id="@+id/fourlinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/threelinear"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="4">

    <Button
        android:id="@+id/zerobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3.94"
        android:text="0"
        android:background="@drawable/teduri"
        android:textSize="20dp" />


    <Button
        android:id="@+id/dividebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/button_selector"
        android:text="/"
        android:textSize="20dp" />


</LinearLayout>


<LinearLayout
    android:id="@+id/fivelinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/fourlinear"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="4">

    <Button
        android:id="@+id/stopbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3.94"
        android:background="@drawable/teduri"
        android:text="clear"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/resultbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/button_selector"
        android:text="="
        android:textSize="20dp" />


</LinearLayout>

<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/fivelinear"
    android:layout_centerHorizontal="true"
    android:text="        가     즈     아     ~ "
    android:textColor="@color/text_selector"
    android:textSize="30dp" />

<TextView
    android:id="@+id/text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="50dp"
    android:layout_below="@+id/text1" />

<TextView
    android:id="@+id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="50dp"
    android:layout_below="@+id/text" />
</RelativeLayout>
