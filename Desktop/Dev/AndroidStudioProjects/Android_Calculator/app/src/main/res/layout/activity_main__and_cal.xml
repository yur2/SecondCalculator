<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/teduri2"
        tools:context="com.example.yurina.android_calculator.MainActivity_AndCal">



        <TextView
            android:id="@+id/gogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:textColor="#000000"
            android:text="계산하러 고고씽"
            android:textSize="38dp"
            />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계산하기"
            android:textSize="24dp"

            android:id="@+id/calculbtn"
            android:layout_below="@+id/gogo"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calcul"
            android:layout_below="@+id/calculbtn"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>
